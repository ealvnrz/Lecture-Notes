\textbf{Ejercicios Clase, Variables Aleatorias Bivariadas}
\end{center}
\begin{enumerate}
\item La función de probabilidad conjunta de dos variables aleatorias discretas $X, Y$ está dada por
$f(x,y) = c(2x+y)$, donde $x,y$ pueden tomar todos los valores enteros tales que $0\leq x \leq 2,0\leq y \leq 3$, y $f(x,y)=0$ de otra forma.

\begin{enumerate}
\item Hallar el valor de la constante c.

\[ \int_{-\infty}^{ \infty} \int_{-\infty}^{ \infty} f(x,y) dx dy = 1\]
\[ \int_{0}^{3} \int_{0}^{ 2} c(2x+y) dx dy = 1\]

Lo anterior implica que $c=1/21$


\item Hallar $\mathbb{P}(X=2,Y=1)$ 

De la definición tenemos que resolver lo siguiente
\[ \int_{1}^{1} \int_{2}^{ 2} 1/21(2x+y) dx dy \]
Sin embargo, al ser variables contínuas, la integral en un punto es 0. Por lo tanto $\mathbb{P}(X=2,Y=1) = 0$ .

\item Hallar $\mathbb{P}(X\geq 1, Y\leq 2)$

De la definición tenemos que resolver lo siguiente
\[ \int_{0}^{2} \int_{1}^{ 2} 1/21(2x+y) dx dy \]
\[ \mathbb{P}(X\geq 1, Y\leq 2) = 8/21 \]

\end{enumerate}




\item Hallar las funciones de probabilidad marginal:
Para las variables aleatorias del problema anterior.
\begin{enumerate}
\item de $X$
\[ f_X(x) =  \int_{-\infty}^{\infty} 1/21(2x+y) dy \]
\[  f_X(x) = 1/21 (6 x +9/2) \]

\item de $Y$

\[ f_Y(y) =  \int_{-\infty}^{\infty} 1/21(2x+y) dx \]
\[  f_Y(y) = 1/21 (2 y +4) \]

\end{enumerate}

\item Muestre que las variables aleatorias $X,Y$ del problema 1 son dependientes.

La definición de independencia implica que:

\[ f(x|y) = \dfrac{f(x,y)}{f_Y(y)} = f_X(x)\]

Sin embargo, al desarrollar la expresión obtenemos
\[ f(x|y) = \dfrac{1/21(2x+y)}{1/21 (2 y+4)} \neq 1/21 (6x +9/2)\]


\item La función de densidad conjunto de dos variables aleatorias continuas $X,Y$ es
$$f(x,y)=\begin{cases}
cxy \hspace{20pt} 0<x<4,1<y<5\\
0 \hspace{20pt} \text{ e.o.c. }
\end{cases}$$
\begin{enumerate}
\item Hallar el valor de la constante c
\[ \int_{-\infty}^{ \infty} \int_{-\infty}^{ \infty} f(x,y) dx dy = 1\]
\[ \int_{1}^{5} \int_{0}^{4} c(xy) dx dy = 1\]

Lo anterior implica que $c=1/96$


\item Hallar $\mathbb{P}(1<X<2,2<Y<3)$

\[ \int_{2}^{3} \int_{1}^{2} 1/96(xy) dx dy = \dfrac{1}{96} * \dfrac{15}{4}\]

\item Hallar $\mathbb{P}(X\geq 3,Y\leq 2)$

\[ \int_{1}^{2} \int_{3}^{4} 1/96(xy) dx dy = \dfrac{1}{96} * \dfrac{21}{4}\]

\end{enumerate}


\item Hallar las funciones de distribución marginal:
Para las variables aleatorias del problema anterior.
\begin{enumerate}
\item de $X$
\[ f_X(x) =  \int_{-\infty}^{\infty} 1/96(xy) dy \]
\[  f_X(x) = 1/96 (24x/2 )= x/8 \]

\item de $Y$

\[ f_Y(y) =  \int_{-\infty}^{\infty} 1/96(xy) dx \]
\[  f_Y(y) = 1/96 (8 y)= y/12 \]


\end{enumerate}

